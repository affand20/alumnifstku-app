<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dashboard"
    tools:context=".ui.trace.TracingActivity">

    <TextView
        android:id="@+id/tv_tracing_title"
        style="@style/splash_title_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRACING ALUMNI"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_tracing_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_normal"
        android:inputType="text"
        android:hint="Nama"
        style="@style/edittext_normal"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@id/tv_tracing_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_tracing_angkatan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_normal"
        android:inputType="text"
        android:hint="Angkatan"
        style="@style/edittext_normal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_tracing_nama"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Spinner
        android:id="@+id/spinner_tracing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_normal"
        android:paddingLeft="0dp"
        android:layout_marginTop="16dp"
        android:spinnerMode="dropdown"
        style="@style/edittext_normal"
        app:layout_constraintTop_toBottomOf="@id/et_tracing_angkatan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btn_search_tracing"
        style="@style/button_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_normal"
        android:text="Mencari Alumni"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_tracing" />


</androidx.constraintlayout.widget.ConstraintLayout>