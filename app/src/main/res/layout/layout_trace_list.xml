<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layoutstyle_kelaslist"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/img_user_list"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/textView24"
        style="@style/edittext_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama :"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/img_user_list"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_user_list_name"
        style="@style/edittext_normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fahri Firdaus"
        android:layout_marginStart="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView24"
        app:layout_constraintTop_toTopOf="@+id/textView24" />

    <TextView
        android:id="@+id/textView25"
        style="@style/edittext_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Angkatan :"
        app:layout_constraintStart_toStartOf="@id/textView24"
        app:layout_constraintTop_toBottomOf="@id/tv_user_list_name" />

    <TextView
        android:id="@+id/tv_user_list_angkatan"
        style="@style/edittext_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/textView25"
        app:layout_constraintTop_toTopOf="@+id/textView25" />

    <TextView
        android:id="@+id/textView26"
        style="@style/edittext_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jurusan :"
        app:layout_constraintStart_toStartOf="@id/textView25"
        app:layout_constraintTop_toBottomOf="@id/tv_user_list_angkatan"/>

    <TextView
        android:id="@+id/tv_user_list_jurusan"
        style="@style/edittext_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sistem Informasi"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/textView26"
        app:layout_constraintTop_toTopOf="@+id/textView26"/>








</androidx.constraintlayout.widget.ConstraintLayout>