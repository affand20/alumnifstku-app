<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue_soft"
    android:layout_marginBottom="4dp"
    android:id="@+id/item_body">

    <TextView
        android:id="@+id/notif_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginEnd="16dp"
        android:text="@string/lorem_ipsum"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/notif_img"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/notif_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="coba"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/notif_msg"
        app:layout_constraintStart_toStartOf="@id/notif_msg"
        app:layout_constraintEnd_toEndOf="@id/notif_msg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="4dp"/>

    <ImageView
        android:id="@+id/notif_img"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/blue_start_gradient"
        android:layout_marginStart="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>