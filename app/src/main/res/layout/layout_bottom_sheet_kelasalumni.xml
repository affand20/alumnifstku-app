<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background">


    <EditText
        android:id="@+id/et_kelasalumni_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_normal"
        android:inputType="text"
        android:hint="Nama Lengkap"
        android:layout_marginTop="32dp"
        android:layout_gravity="center"
        style="@style/edittext_normal"/>

    <EditText
        android:id="@+id/et_kelasalumni_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_normal"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:layout_gravity="center"
        style="@style/edittext_normal"
        android:layout_marginTop="16dp"/>

    <EditText
        android:hint="No Whatsapp"
        android:id="@+id/et_kelasalumni_whatsapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_normal"
        android:layout_marginTop="16dp"
        android:inputType="number"
        android:layout_gravity="center"
        style="@style/edittext_normal"/>

    <TextView
        android:gravity="center"
        android:id="@+id/btn_sheet_bookingsekarang"
        style="@style/button_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_normal"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:text="Booking Sekarang"/>

</LinearLayout>