<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dashboard"
    tools:context=".ui.pengaturan.PengaturanActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24sp"
            android:src="@drawable/logo_dashboard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/btn_setting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_setting"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@id/imageView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageView7"
            app:layout_constraintBottom_toBottomOf="@id/imageView7"/>


        <ImageView
            android:id="@+id/trace_img_details"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="16dp"
            android:background="@color/splash_blue"
            android:src="@drawable/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/textView27"
            app:layout_constraintBottom_toBottomOf="@id/trace_angkatan_details"/>

        <TextView
            android:id="@+id/textView27"
            style="@style/text_normal_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Nama"
            app:layout_constraintStart_toEndOf="@id/trace_img_details"
            app:layout_constraintTop_toBottomOf="@id/imageView7"/>

        <TextView
            android:id="@+id/trace_nama_details"
            style="@style/text_normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_item"
            android:text="xxx"
            app:layout_constraintStart_toStartOf="@+id/textView27"
            app:layout_constraintTop_toBottomOf="@id/textView27"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/textView28"
            style="@style/text_normal_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Jurusan"
            app:layout_constraintStart_toStartOf="@id/textView27"
            app:layout_constraintTop_toBottomOf="@id/trace_nama_details"/>

        <TextView
            android:id="@+id/trace_jurusan_details"
            style="@style/text_normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_item"
            android:text="xxx"
            app:layout_constraintStart_toStartOf="@+id/textView28"
            app:layout_constraintTop_toBottomOf="@id/textView28"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/textView29"
            style="@style/text_normal_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Angkatan"
            app:layout_constraintStart_toStartOf="@id/textView27"
            app:layout_constraintTop_toBottomOf="@id/trace_jurusan_details"/>

        <TextView
            android:id="@+id/trace_angkatan_details"
            style="@style/text_normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_item"
            android:text="xxx"
            app:layout_constraintStart_toStartOf="@+id/textView29"
            app:layout_constraintTop_toBottomOf="@id/textView29"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/textView34"
            style="@style/text_normal_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="LinkedIn"
            app:layout_constraintStart_toStartOf="@id/trace_img_details"
            app:layout_constraintTop_toBottomOf="@id/trace_angkatan_details"/>

        <TextView
            android:id="@+id/trace_linkedin_details"
            style="@style/text_normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_item"
            android:text="@string/lorem_ipsum"
            app:layout_constraintStart_toStartOf="@+id/textView34"
            app:layout_constraintTop_toBottomOf="@id/textView34"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_pekerjaanlist"
            style="@style/text_normal_bold"
            tools:listitem="@layout/layout_rv_pekerjaanlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pekerjaan"
            android:nestedScrollingEnabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/trace_linkedin_details"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>