<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layoutstyle_kelaslist"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_marginLeft="15dp"
        android:id="@+id/textView7"
        style="@style/edittext_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tema"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView8"
        style="@style/edittext_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pembicara"
        app:layout_constraintStart_toStartOf="@id/textView7"
        app:layout_constraintTop_toBottomOf="@id/kelas_tema" />

    <TextView
        android:id="@+id/textView9"
        style="@style/edittext_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kuota"
        app:layout_constraintStart_toStartOf="@id/textView8"
        app:layout_constraintTop_toBottomOf="@id/kelas_pembicara" />

    <TextView
        android:id="@+id/mastercolon"
        style="@style/edittext_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView10"
        style="@style/edittext_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        app:layout_constraintStart_toStartOf="@id/mastercolon"
        app:layout_constraintTop_toTopOf="@id/textView7" />

    <TextView
        android:id="@+id/textView11"
        style="@style/edittext_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        app:layout_constraintStart_toStartOf="@id/mastercolon"
        app:layout_constraintTop_toTopOf="@+id/textView9" />

    <TextView
        android:id="@+id/kelas_tema"
        style="@style/edittext_normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="8dp"
        android:text="TEMA1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="@id/textView7" />

    <TextView
        android:id="@+id/kelas_pembicara"
        style="@style/edittext_normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="8dp"
        android:text="Mas Abdoe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/mastercolon"
        app:layout_constraintTop_toTopOf="@id/textView8" />

    <TextView
        android:id="@+id/kelas_kuota"
        style="@style/edittext_normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="10/40"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toTopOf="@id/textView9" />




</androidx.constraintlayout.widget.ConstraintLayout>